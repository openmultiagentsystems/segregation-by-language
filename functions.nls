;
; Returns words that both agents knows
;
to-report get-words-diff [my neighbor]
  report (my - neighbor)
end

to-report has-words-to-learn [agent_words neighbor_words]
  if agent_words > neighbor_words [report false ]
  if neighbor_words > agent_words [report true ]
  report false
end

;
; Checks which words an agent
; can learn and add its list of words
;
to-report add [agent_words neighbor_words]
  let new_words filter [x -> not member? x agent_words] neighbor_words

  set agent_words lput (one-of new_words) agent_words

  report agent_words
end
